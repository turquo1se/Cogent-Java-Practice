<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
			"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>														<!--setter injection  -->
	<bean id="t" class="business.Student" scope="prototype">  <!--scope is singleton pattern by default  -->
		<property name="name" value="Allen"></property>  <!-- will call setter method internally -->
		<property name="email" value="allen@gmail.com"></property>
		<property name="age" value="28"></property>
	</bean>
	
	
</beans>