<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   <!-- It will activate Autowired annotation -->
 
   <context:component-scan base-package="autowire"></context:component-scan> 
   <!-- autowire is used to automaticaly injecting secondary(class) type of dependencies, 
   such we injecting account class into employee class -->
   </beans>